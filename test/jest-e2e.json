{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^src/(.*)": "<rootDir>/../src/$1"
    },
    "testTimeout": 30000,
    "moduleDirectories": ["node_modules", "<rootDir>"],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/../tsconfig.json"
      }
    }
  }